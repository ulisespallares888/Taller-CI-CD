pipeline {
    agent any
    tools {
        maven 'Maven_3.8.1'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Docker Build & Run') {
            steps {
                sh 'docker build -t demo-app .'
                sh 'docker run -d -p 8080:8080 demo-app'
            }
        }
    }
}